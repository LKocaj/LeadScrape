# Environment
NODE_ENV=development
LOG_LEVEL=debug

# Database
DATABASE_PATH=./data/leads.db

# Redis (for BullMQ job queue)
REDIS_HOST=localhost
REDIS_PORT=6379

# Google Places API
# Get yours at: https://console.cloud.google.com/apis/credentials
GOOGLE_PLACES_API_KEY=

# Yelp Fusion API
# Get yours at: https://www.yelp.com/developers/v3/manage_app
YELP_API_KEY=

# Proxycurl (for LinkedIn - optional)
# Get yours at: https://nubela.co/proxycurl/
PROXYCURL_API_KEY=

# Hunter.io (for email enrichment)
# Get yours at: https://hunter.io/api
HUNTER_API_KEY=

# Apollo.io (alternative email enrichment - optional)
# Get yours at: https://www.apollo.io/
APOLLO_API_KEY=

# Proxy Configuration (for directory scraping - optional)
# Providers: brightdata, oxylabs, iproyal, custom
PROXY_PROVIDER=
PROXY_USERNAME=
PROXY_PASSWORD=
# Or use a custom proxy list file
PROXY_LIST_PATH=

# Scraping Settings
MAX_CONCURRENT_SCRAPERS=2
REQUEST_TIMEOUT_MS=30000

# Export
EXPORT_PATH=./data/exports
